<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="informatique.cgmatane.qc.cq.databasestats.vues.MainActivity">

    <TextView
        android:id="@+id/description_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez les statistiques à visionner"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bouton_accelerometre_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceléromètre"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/bouton_temperatures_main_activity"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bouton_temperatures_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatures"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="3dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/description_main_activity"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/bouton_accelerometre_main_activity" />
</android.support.constraint.ConstraintLayout>
