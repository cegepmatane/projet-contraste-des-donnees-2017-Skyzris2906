        app:layout_constraintBaseline_toBaselineOf="@+id/bouton_mois_vue_temperatures"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/bouton_mois_vue_temperatures"
        android:layout_marginLeft="2dp" />

    <Button
        android:id="@+id/bouton_jour_vue_temperatures"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Jour"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/bouton_semaine_vue_temperatures"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <ListView
        android:id="@+id/liste_temperatures_vue_temperatures"
        android:layout_width="342dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/bouton_semaine_vue_temperatures"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/bouton_jour_vue_temperatures"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/bouton_semaine_vue_temperatures"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.0" />
