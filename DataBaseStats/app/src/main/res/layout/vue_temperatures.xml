    <TextView
        android:id="@+id/libelle_valeurmin_vue_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur minimum :"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/libelle_valeurmax_vue_temperatures"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/libelle_valeurmax_vue_temperatures" />

    <Button
        android:id="@+id/bouton_annee_vue_temperatures"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="AnnÃ©e"
        app:layout_constraintBaseline_toBaselineOf="@+id/bouton_mois_vue_temperatures"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/bouton_mois_vue_temperatures"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Mois"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/libelle_nombrevaleurs_vue_temperatures"
        android:layout_marginStart="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/bouton_annee_vue_temperatures" />

    <Button
        android:id="@+id/bouton_semaine_vue_temperatures"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
