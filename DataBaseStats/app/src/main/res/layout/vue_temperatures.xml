<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="informatique.cgmatane.qc.cq.databasestats.vues.VueTemperatures"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/libelle_nombrevaleurs_vue_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Nombre de valeurs"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/liste_temperatures_vue_temperatures"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/libelle_moyenne_vue_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur moyenne :"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/libelle_nombrevaleurs_vue_temperatures"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/libelle_nombrevaleurs_vue_temperatures" />

    <TextView
        android:id="@+id/libelle_valeurmax_vue_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur maximum :"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/libelle_moyenne_vue_temperatures"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/libelle_moyenne_vue_temperatures" />

    <TextView
        android:id="@+id/libelle_valeurmin_vue_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur minimum :"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/libelle_valeurmax_vue_temperatures"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/liste_temperatures_vue_temperatures"
        android:layout_width="0dp"
        android:layout_height="302dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
